# MongoDB config
MONGODB_CONNECTION_URI="<MongoDB connection URI with Atlas Vector Search configured on 'embedded_content'>"
VECTOR_SEARCH_INDEX_NAME="vector_index" # or whatever your index name is
MONGODB_DATABASE_NAME="mongodb-chatbot-framework" # or whatever your database name is. must contain vector search index.

# LLM Provider Selection
LLM_PROVIDER="ollama" # Options: ollama, gemini

# Ollama config
OLLAMA_BASE_URL="http://localhost:11434" # Base URL for Ollama API
OLLAMA_EMBEDDING_MODEL="nomic-embed-text" # Ollama embedding model
OLLAMA_CHAT_MODEL="llama3" # Ollama chat model

# Gemini config
GEMINI_API_KEY="<Your Gemini API key>" # Get your API key from https://aistudio.google.com/app/apikey
GEMINI_CHAT_MODEL="gemini-pro" # Gemini chat model
GEMINI_EMBEDDING_MODEL="embedding-001" # Gemini embedding model

# Common LLM config
LLM_TIMEOUT_MS=60000 # Timeout in milliseconds

# Github repo config
GITHUB_REPO_OWNER="mongodb-university" # or your own username if you fork
GITHUB_REPO_NAME=cookbook-chat # or whatever your repo name is
